# ================================
# Server
# ================================
PORT=3001
NODE_ENV=development

# ================================
# PDF Service (Performance)
# ================================
# Adjust based on your CPU cores
# Small server (1-2 cores): MIN=2, MAX=4
# Medium server (4-8 cores): MIN=4, MAX=8
# Large server (16+ cores): MIN=16, MAX=32
PDF_MIN_THREADS=4
PDF_MAX_THREADS=6


CORS_ORIGIN=*

# ================================
# Development Tools
# ================================
# Enable debug stats logging (shows stats every minute)
DEBUG_STATS=false

# Enable /debug/* endpoints (DISABLE in production!)
ENABLE_DEBUG_ENDPOINTS=true
